<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:padding="10dp">
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="2dp"
    card_view:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvTitleLower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="8pt"
            android:text="@string/titleEcho"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            app:layout_editor_absoluteX="10dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvEchoUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextBlack"
            android:textSize="6pt"
            card_view:layout_constraintTop_toBottomOf="@id/tvTitleLower"
            card_view:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:text="@string/urlTitle"/>

        <EditText
            android:id="@+id/etRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/request"
            android:textColor="@android:color/darker_gray"
            android:textSize="6pt"
            card_view:layout_constraintLeft_toRightOf="@+id/tvEchoUrl"
            card_view:layout_constraintStart_toEndOf="@id/tvEchoUrl"
            card_view:layout_constraintTop_toBottomOf="@id/tvTitleLower" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            card_view:layout_constraintTop_toBottomOf="@id/etRequest"
            card_view:layout_constraintStart_toStartOf="parent"
            android:text="Send"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            card_view:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            card_view:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tvValueLower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintTop_toBottomOf="@id/btnSend"
            card_view:layout_constraintStart_toStartOf="parent"
            android:text="@string/resultTitle"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>