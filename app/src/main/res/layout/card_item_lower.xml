<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/listview_lower">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:minWidth="200dp"
        android:padding="2dp"
        card_view:cardElevation="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tvTitleLower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/titleEcho"
                android:textColor="@color/colorPrimary"
                android:textSize="8pt"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvEchoUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/urlTitle"
                android:textColor="@color/colorTextBlack"
                android:textSize="6pt"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/tvTitleLower" />

            <EditText
                android:id="@+id/etRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="key/value"
                android:inputType="text"
                android:minWidth="80dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="6pt"
                card_view:layout_constraintLeft_toRightOf="@+id/tvEchoUrl"
                card_view:layout_constraintStart_toEndOf="@id/tvEchoUrl"
                card_view:layout_constraintTop_toBottomOf="@id/tvTitleLower" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:text="Send"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/etRequest" />

            <TextView
                android:id="@+id/tvValueLower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resultTitle"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/btnSend" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>